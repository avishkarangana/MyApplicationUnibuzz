<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Back arrow icon -->
    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_arrow_back"
        android:contentDescription="Back"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp" />


    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp"
        android:src="@drawable/profile_image"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop" />

    <!-- User Info Label -->
    <TextView
        android:id="@+id/userInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Info"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/profileImage"
        android:layout_marginTop="86dp"
        android:layout_centerHorizontal="true"
        />

    <!-- Username -->
    <TextView
        android:id="@+id/usernameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User name: avishka076"
        android:textSize="16sp"
        android:layout_below="@id/userInfoLabel"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true" />

    <!-- Email -->
    <TextView
        android:id="@+id/emailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: 2022t01569@cmb.ac.lk"
        android:textSize="16sp"
        android:layout_below="@id/usernameText"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" />

    <!-- Edit Info Button -->
    <Button
        android:id="@+id/editInfoButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Edit info."
        android:backgroundTint="#FFFF00"
        android:textColor="#000000"
        android:layout_below="@id/emailText"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true" />

    <!-- Sign-out Button -->
    <Button
        android:id="@+id/signOutButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Sign-out"
        android:backgroundTint="#2E1EFF"
        android:textColor="#FFFFFF"
        android:layout_below="@id/editInfoButton"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="66dp"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
